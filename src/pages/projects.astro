---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { getCollection } from 'astro:content';
import { formattedDateFromFilename, sortContentByDateFromFilename } from './../utils.ts';


const projects = sortContentByDateFromFilename(
	await getCollection('projects')
);
---
<Layout title='Projects & Things'>
	<h1>Projects & Things</h1>
	{ projects.reverse().map( project => <div><Card
		icon={project.data.icon || ""}
		date={formattedDateFromFilename(project.id)}
		href={project.data.url}
		title={project.data.title}
		body={project.body || ""}
		/></div>
	)}
	<footer></footer>
</Layout>
<style>
	div {
		margin: 8px;
	}
	footer {
		height: 100px;
	}
</style>
